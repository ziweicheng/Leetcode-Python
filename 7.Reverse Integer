## 28ms 
import math
class Solution(object):
    def reverse(self, x):
        """
        :type x: int
        :rtype: int
        """
        if x > 0:
            bits = int(math.log10(x))
            i = 0
            sum = 0
            while i <= bits:
                a = int(x / math.pow(10, bits-i))
                b = a % 10
                if i == 0:
                    sum += a*pow(10, i)
                else:
                    sum += b * pow(10, i)
                i += 1
            return sum
        if x == 0:
            return 0
        if x < 0:
            x = abs(x)
            bits = int(math.log10(x))
            i = 0
            sum = 0
            while i <= bits:
                a = int(x / math.pow(10, bits - i))
                b = a % 10
                if i == 0:
                    sum += a * pow(10, i)
                else:
                    sum += b * pow(10, i)
                i += 1
            return -sum


## 20 ms

class Solution(object):
    def reverse(self, x):
        """
        :type x: int
        :rtype: int
        """
        if x >= 0:
            result = int(str(x)[::-1])
        else:
            result = int('-' + str(abs(x))[::-1])
        if (-2)**31 <= result <= 2**31 - 1:
            return result
        else:
            return 0
